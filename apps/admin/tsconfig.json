{
 "extends": "@repo/typescript-config/nextjs.json",
 "compilerOptions": {
  "plugins": [
   {
    "name": "next"
   }
  ],
  "baseUrl": ".",
  "paths": {
   "@/*": ["./src/*"],
   "@repo/actions/*": ["../../packages/actions/src/*"],
   "@repo/auth/*": ["../../packages/auth/src/*"],
   "@repo/db/*": ["../../packages/db/src/*"]
  }
 },
 "include": [
  "**/*.ts",
  "**/*.tsx",
  "next-env.d.ts",
  "next.config.js",
  ".next/types/**/*.ts",
  "../../packages/actions/src/*.ts",
  "../../packages/db/src/*.ts",
  "../../packages/actions/src/users/*.ts"
 ],
 "exclude": ["node_modules"]
}
